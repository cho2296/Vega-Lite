{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Multi-series line chart with labels and interactive highlight on hover.  We also set the selection's initial value to provide a better screenshot",
  "data": {
    "url": "https://raw.githubusercontent.com/fuyuGT/CS7450-data/main/countries.csv"
  },
  "vconcat": [
    {
      "title": {
        "text": "Life Expectancy in Europe and South America",
        "anchor": "middle"
      },
      "facet": {"row": {"field": "Region"}},
      "spec": {
        "width": 800,
        "height": 300,
        "encoding": {
          "x": {"field": "Year", "type": "temporal", "title": "Year"},
          "y": {
            "field": "LifeExpectancyTotal",
            "type": "quantitative",
            "title": "Life Expectancy (Years)",
            "scale": {"domain": [50, 90]}
          },
          "color": {
            "condition": {
              "param": "hover",
              "field": "Country",
              "type": "nominal",
              "legend": null
            },
            "value": "grey"
          },
          "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2}
        },
        "layer": [
          {
            "description": "transparent layer to make it easier to trigger selection",
            "params": [
              {
                "name": "hover",
                "value": [{"Country": "Cyprus"}, {"Country": "Colombia"}],
                "select": {
                  "type": "point",
                  "fields": ["Country"],
                  "on": "mouseover"
                }
              }
            ],
            "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
          },
          {"mark": "line"},
          {
            "encoding": {
              "x": {"aggregate": "max", "field": "Year"},
              "y": {
                "aggregate": {"argmax": "Year"},
                "field": "LifeExpectancyTotal"
              }
            },
            "layer": [
              {"mark": {"type": "circle"}},
              {
                "mark": {"type": "text", "align": "left", "dx": 4},
                "encoding": {"text": {"field": "Country", "type": "nominal"}}
              }
            ]
          }
        ],
        "config": {"view": {"stroke": null}}
      }
    },
    {
      "title": {
        "text": "Urban Population % Growth (Î¼, 1980-2013) in Europe and South America",
        "anchor": "middle"
      },
      "facet": {"column": {"field": "Region"}},
      "spec": {
        "mark": "bar",
        "width": 400,
        "height": 300,
        "encoding": {
          "x": {"field": "Country", "type": "nominal", "title": "Country"},
          "y": {
            "aggregate": "mean",
            "field": "UrbanPopulationPercentGrowth",
            "type": "quantitative",
            "title": "Urban Population Growth (%)"
          },
          "color": {"field": "Region"},
          "tooltip": {"aggregate": "mean", "field": "UrbanPopulationPercentGrowth", "type": "quantitative"}
        }
      }
    }
  ],
  "config": {}
}
